<mvc:View controllerName="com.ncs.btp.buildinbox.controller.DocumentApproval"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false" showFooter="true">
        <uxap:headerTitle>
            <!-- <uxap:ObjectPageHeader objectTitle="Section sample">
			</uxap:ObjectPageHeader> -->
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <Title text="{TaskDetails>/subject}" wrapping="true"/>
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <!-- <Avatar src="sap-icon://picture" backgroundColor="Random" class="sapUiTinyMarginEnd"/> -->
                        <Title text="{TaskDetails>/subject}" wrapping="true" />
                    </FlexBox>
                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <Text text="{TaskDetails>/subject}"/>
                </uxap:expandedContent>

                <uxap:snappedContent>
                    <Text text="{TaskDetails>/subject}"/>
                </uxap:snappedContent>

                <uxap:snappedTitleOnMobile>
                    <Title text="{TaskDetails>/subject}"/>
                </uxap:snappedTitleOnMobile>

            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <FlexBox wrap="Wrap">
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <ObjectStatus title="Requested By" text="{TaskDetails>/createdBy}"/>
                    <ObjectStatus title="Requested On" text="{ path: 'TaskDetails>/createdAt', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'short' }}"/>

                </l:VerticalLayout>
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">

                    <ObjectStatus title="Status" text="{TaskDetails>/status}"/>
                    <ObjectStatus title="Priority" text="{TaskDetails>/priority}"/>
                </l:VerticalLayout>
            </FlexBox>
            <!-- <ObjectAttribute title="" text="This example explains the rules for the rendering of sections"/> -->
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="Business Partner Details">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <uxap:blocks>
                            <f:Form editable="false">
                                <f:title>
                                    <!-- <core:Title text="Basic Details" /> -->
                                </f:title>
                                <f:layout>
                                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2" singleContainerFullSize="false" />
                                </f:layout>
                                <f:formContainers>
                                    <f:FormContainer title="Basic Details">
                                        <f:formElements>
                                            <f:FormElement label="Document Id">
                                                <f:fields>
                                                    <Text text="{documentService>/ID}" />
                                                </f:fields>
                                            </f:FormElement>
                                            <f:FormElement label="Document Type ">
                                                <f:fields>
                                                    <Text text="{documentService>/DOC_TYPE}" />
                                                </f:fields>
                                            </f:FormElement>
                                            <f:FormElement label="Document Name">
                                                <f:fields>
                                                    <Text text="{documentService>/NAME}" />
                                                </f:fields>
                                            </f:FormElement>
                                            <f:FormElement label="Document Type">
                                                <f:fields>
                                                    <Text text="{documentService>/MIME_TYPE}" />
                                                </f:fields>
                                            </f:FormElement>
                                              <f:FormElement label="Document Status">
                                                <f:fields>
                                                    <Text text="{documentService>/STATUS}" />
                                                </f:fields>
                                            </f:FormElement>
                                             <f:FormElement label="Vendor Code">
                                                <f:fields>
                                                    <Text text="{poService>Lifnr}" />
                                                </f:fields>
                                            </f:FormElement>
                                             <f:FormElement label="Vendor Name">
                                                <f:fields>
                                                    <Text text="{poService>Description}" />
                                                </f:fields>
                                            </f:FormElement>
                                             <f:FormElement label="Currency">
                                                <f:fields>
                                                    <Text text="{poService>Waers}" />
                                                </f:fields>
                                            </f:FormElement>
                                        
                                        </f:formElements>
                                    </f:FormContainer>
                                 
                                </f:formContainers>
                            </f:Form>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>

                </uxap:subSections>
            </uxap:ObjectPageSection>


            <uxap:ObjectPageSection titleUppercase="false" title="Line Items">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <uxap:blocks>
                            <Table inset="false" items="{
                                    path: 'poService>POHeadItemSetNav'
                                }">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <!-- <Title text="Products" level="H2"/> -->
                                            <ToolbarSpacer />

                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>

                                <columns>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="PO Line Item"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Material Code"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Short Text"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="PO Quantity"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Net Price"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Delivery Date"/>
                                    </Column>
                                     <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="GL Account "/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Cost Center  "/>
                                    </Column>
                                     <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Profit Center  "/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <Text text="{poService>Ebelp}" />
                                            <Text text="{poService>Matnr}" />
                                            <Text text="{poService>Txz01}" />
                                            <Text text="{poService>Menge}" />
                                            <Text text="{poService>Netpr}" />
                                            <Text text="{poService>Eindt}" />
                                            <Text text="{poService>Sakto}" />
                                            <Text text="{poService>Kostl}" />
                                            <Text text="{poService>KoPrctr}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection titleUppercase="false" title="Comments">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <uxap:blocks>
                            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                                <l:content>
                                    <TextArea value="{commentsModel>/comments}" maxLength="40" placeholder="Enter your comments" width="100%"/>

                                    <FeedContent 
                                        visible="{= ${poService>L1comments} === '' ? false : true }" 
                                        contentText="{poService>L1comments}" 
                                        subheader="by L1 Approver">
                                    </FeedContent>

                                    <FeedContent 
                                        visible="{= ${poService>L2comments} === '' ? false : true }" 
                                        contentText="{poService>L2comments}" 
                                        subheader="by L2 Approver">
                                    </FeedContent>

                                    <FeedContent 
                                        visible="{= ${poService>L3comments} === '' ? false : true }" 
                                        contentText="{poService>L3comments}" 
                                        subheader="by L3 Approver">
                                    </FeedContent>
                               
                                    <!-- <List showSeparators="Inner" items="{/EntryCollection}">
                                        <FeedListItem sender="{Author}" info="{Type}" timestamp="{Date}" text="{Text}" convertLinksToAnchorTags="All"/>
                                    </List> -->

                                </l:content>
                            </l:VerticalLayout>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>



        </uxap:sections>

        <uxap:footer>
            <OverflowToolbar>

                <ToolbarSpacer/>
                <Button type="Accept" text="Approve" press="onAccept"/>
                <Button type="Reject" text="Reject" press="onReject"/>
            </OverflowToolbar>
        </uxap:footer>

    </uxap:ObjectPageLayout>
</mvc:View>